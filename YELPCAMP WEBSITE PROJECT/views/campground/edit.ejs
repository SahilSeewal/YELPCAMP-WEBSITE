<% include ../partials/header %>
<div class="container text-center">
    <h1>Edit a Campground</h1>
    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
    <div class="form-group">
<input type="text" name="campground[name]" class="form-control" value="<%= campground.name %>" style="width:25%;margin:0 auto;" required>
    </div>
    <div class="form-group">
<input type="Number" name="campground[price]" class="form-control" value="<%= campground.price %>" style="width:25%;margin:0 auto;" min="0.01" step="0.01" required>
            </div>
        
    <div class="form-group">
    <input type="text" name="campground[image]" class="form-control" value="<%= campground.image %>" style="width:25%;margin:0 auto;" required>
</div>
<div class="form-group">
    <input type="text" name="campground[description]" class="form-control" value="<%= campground.description %>" style="width:25%;margin:0 auto;" required>
</div>

<div class="form-group">    
<button class="form-control btn btn-lg btn-primary" style="width:25%;margin:0 auto;">SUBMIT</button>
</div>

</form>
</div>
<div class="form-group">
        <a href="/campgrounds"  style="margin-left:38.7em;">Go Back</a>
        </div>
<% include ../partials/footer %>
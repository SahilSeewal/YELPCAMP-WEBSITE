<% include ../partials/header %>
<div class="container text-center">
        <h1>Create a new Campground</h1>
    <form action="/campgrounds" method="POST">
    <div class="form-group">
<input type="text" name="name" class="form-control" placeholder="camp name" style="width:25%;margin:0 auto;" required>
    </div>
    <div class="form-group">
        <input type="Number" name="price" class="form-control" placeholder="price" min="0.01" step="0.01" style="width:25%;margin:0 auto;" required>
            </div>
<div class="form-group">
    <input type="text" name="image" class="form-control" placeholder="image url" style="width:25%;margin:0 auto;" required>
</div>
<div class="form-group">
    <input type="text" name="description" class="form-control" placeholder="description" style="width:25%;margin:0 auto;" required>
</div>

<div class="form-group">    
<button class="form-control btn btn-lg btn-primary" style="width:25%;margin:0 auto;">SUBMIT</button>
</div>

</form>
</div>
<div class="form-group">
        <a href="/campgrounds"  style="margin-left:38.7em;">Go Back</a>
        </div>
<% include ../partials/footer %>
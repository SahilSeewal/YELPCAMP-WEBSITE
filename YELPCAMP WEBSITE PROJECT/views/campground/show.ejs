
<% include ../partials/header %>
<div class="container">
<div class="row"> 
        <div class="col-md-3">
                <div class="list-group">    
                <li class="list-group-item active">info 1 </li>
                <li class="list-group-item">info 2</li>
                <li class="list-group-item">info 3</li>
                </div>    
                </div>
                
                <div class="col-md-9">
                    <div class="thumbnail">    
                    <img class="img-responsive" src="<%= Campgrounds.image %>">
                    
                            <div id="dd" class="caption-full">
                           <h4 class="pull-right">
                                 $<%=Campgrounds.price %>/night    
                                </h4>
                                <h4><a><%= Campgrounds.name %></a></h4>
                            <p><%= Campgrounds.description %></p>
                       <div style="margin-bottom:1em;">
                            <p><em>Submitted By:- <%= Campgrounds.author.username %> </em></p>       
                        </div>
            
                        <% if(currentUser && String(Campgrounds.author.id)==currentUser._id){%>
                        <div style="margin-bottom:3em;">
                            <a id ="b2" href="/campgrounds/<%= Campgrounds._id %>/edit" class="btn btn-xs btn-warning">EDIT</a>        
                        <form action="/campgrounds/<%= Campgrounds._id %>?_method=DELETE" method="POST">
                        <Button style="margin-right:58em" id="b1" class="btn btn-xs btn-danger">DELETE</Button>
                            
                    </form>
                    </div>
                <% } %>
                   
                </div>
                </div>
</div>
</div>
        <div style="width:74%;margin-left:295px;" class="well">
                <div class="contaner">
                        <div class="text-right">
                    <a href="/campgrounds/<%= Campgrounds._id %>/comments/new" class="btn btn-success">ADD COMMENT</a>
                </div>
                <hr>
                
                <div class="row">
                <div class="col-md-12">
                
                <% Campgrounds.comments.forEach(function(comment){ %>
                    <span class="pull-right">10 days ago</span>
                    <strong><%= comment.author.username %></strong> 
                </p> <%= comment.text %></p>
                <div style="margin-bottom:3em;">
                <% if(currentUser && String(comment.author.id) == currentUser._id){ %>
                    <a href="/campgrounds/<%= Campgrounds._id %>/comments/<%= comment._id %>/edit" class="btn btn-warning btn-xs" style="float:left;">EDIT</a>
                <form action="/campgrounds/<%= Campgrounds._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
                    <input type="submit" style="float:right;margin-right:58em;" class="btn btn-danger btn-xs" value="DELETE">
                   </form>
                <% } %>
                </div>
                   <% }) %>
                
                                </div>
                                </div>
                
    
        
            </div>
                     
        </div>


 
</div>
<% include ../partials/footer %>